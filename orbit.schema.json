{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrbitOS App Manifest",
  "type": "object",
  "required": ["id", "name", "version", "permissions", "main"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique app identifier (lowercase, numbers, hyphens only)"
    },
    "name": {
      "type": "string",
      "maxLength": 50,
      "description": "Display name of the app"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief description of the app"
    },
    "author": {
      "type": "string",
      "maxLength": 100,
      "description": "App author name"
    },
    "icon": {
      "type": "string",
      "description": "App icon (emoji or base64 data URL)"
    },
    "main": {
      "type": "string",
      "description": "Entry point file (e.g., App.jsx)"
    },
    "permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["ui", "storage", "network", "files"]
      },
      "description": "Required permissions"
    },
    "size": {
      "type": "integer",
      "maximum": 1048576,
      "description": "App size in bytes (max 1MB)"
    },
    "category": {
      "type": "string",
      "enum": [
        "productivity",
        "utility",
        "entertainment",
        "development",
        "system"
      ],
      "description": "App category"
    }
  }
}
